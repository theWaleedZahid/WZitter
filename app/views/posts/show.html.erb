<div class="row">
    <div class="col-xs-3">
      
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">  
            <img src="/banner.jpg" class="panel-image-preview">
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-2"><img src="/avatar.png" height="50px" width="50px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: left;padding-left: 10px;margin-top: 0px;"><%=link_to current_user.fullname, "/user/"+current_user.username %><br>(@<%= current_user.username %>)</h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">WZEETS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count %></h6>
                  </div>
                </div>
            </div>

          </div>
        </div>
        
        <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
          </div>
        </div>
    </div>
    <div class="col-xs-6">
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
            <div class="col-sm-1">
              <img src="/avatar.png" class="rounded-img" height="50px" width="50px"></img>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@post.user_id).username %>"><%= User.find(@post.user_id).fullname %></a></span> <span class="post-creation">- <%= @post.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @post.content %></p>
            </div>
            
            <div class="col-sm-12">
              <p class="post-links" style="margin-bottom: 0px; margin-top: 5px;">
                <span style="margin-right: 75px;"><i class="fa fa-comment" aria-hidden="true" style="bg-color:#337ab7;"><%= @post.comments.count %></i></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                <span style="margin-right: 75px;"><%= link_to @post.get_upvotes.size, like_post_path(@post), method: :put, :class => "fa fa-heart" %></span>
                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
              </p>
            </div>
            
          </div>
        </div>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <% if user_signed_in? %>
            <%= render "comments/form" %>
            <%= render @post.comments %>
            <% else %>
            Please Login
            <% end %>
          </div>
        </div>
        
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="col-sm-12">
            <center><img src="/icon.png" height="25px" width="25px"></img>
              <a href="#top"><p class="opacity: .7;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
            </div>
          </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <p style="opacity: 0.5; font-size: 90%;">Â© 2016 WZitter  About  Help  Terms  Privacy  Cookies  Ads Info  Brand  Blog  Status  Apps  Jobs  Advertise  Businesses  Media  Developers</p>
          </div>
        </div>
    </div>
</div>