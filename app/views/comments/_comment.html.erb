<% if @post.comments.count > 0 %>
<div class="col-xs-6">
  <div class="panel panel-default">
    <div class="panel-heading"><%= comment.name %> says:    <% if comment.email = current_user.email %>
    <%= link_to "Delete", [comment.post, comment],  method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %></div>
    <div class="panel-body"><%= comment.body %></div>

  </div>
</div>
<% end %>